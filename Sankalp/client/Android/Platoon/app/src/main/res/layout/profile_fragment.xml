<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light">
    <LinearLayout
        android:id="@+id/pf_profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="50dp"
        android:paddingHorizontal="25dp"
        android:background="@color/colorPrimary">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/pf_ivlogo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/centerpointer"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/pf_actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <Button
                android:id="@+id/pf_login_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cutom_round_button"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/colorAccent"
                android:text="Log In"
                android:textSize="18dp"
                android:layout_marginVertical="3dp"/>

            <Button
                android:id="@+id/pf_register_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/pf_login_button"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cutom_round_button"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/colorAccent"
                android:text="Register"
                android:textSize="18dp"
                android:layout_marginVertical="3dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/pf_data"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_weight="3">
            <TextView
                android:id="@+id/pf_tvheadername"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="6dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cutom_round_button"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_marginVertical="3dp"/>
            <TextView
                android:id="@+id/pf_tvheaderemail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="6dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cutom_round_button"
                android:layout_marginHorizontal="12dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_below="@id/pf_tvheadername"
                android:layout_marginVertical="3dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pf_userdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/pf_profile_header">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="6dp">
            <TextView
                android:id="@+id/pf_tvmanageboats"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/border2"
                android:textSize="16dp"
                android:text="Manage Boats"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="6dp">
            <TextView
                android:id="@+id/pf_tvmanageprojects"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/border2"
                android:textSize="16dp"
                android:text="Manage Projects"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_margin="6dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/pf_tvname"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="16dp"
                        android:text="Company Name"
                        android:gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/pf_etname"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="16dp"
                        android:hint="Company Name"
                        android:visibility="gone"
                        android:gravity="center_vertical"/>
                    <Button
                        android:id="@+id/pf_btetnamesubmit"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Submit"
                        android:visibility="gone"
                        android:background="@drawable/cutom_round_button"
                        android:gravity="center"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/pf_btetname"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/editpencil"/>
                <ImageView
                    android:id="@+id/pf_btetnamecancel"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:src="@drawable/cancel"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_margin="6dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/pf_tvemail"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="16dp"
                        android:text="Email Address"
                        android:gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/pf_etemail"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="16dp"
                        android:hint="Email Address"
                        android:visibility="gone"
                        android:gravity="center_vertical"/>
                    <Button
                        android:id="@+id/pf_btetemailsubmit"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Submit"
                        android:visibility="gone"
                        android:background="@drawable/cutom_round_button"
                        android:gravity="center"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/pf_btetemail"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/editpencil"/>
                <ImageView
                    android:id="@+id/pf_btetemailcancel"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:src="@drawable/cancel"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_margin="6dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/pf_tvpassword"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="16dp"
                        android:text="Password: ************"
                        android:gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/pf_etpassword"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="16dp"
                        android:hint="New Password"
                        android:visibility="gone"
                        android:gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/pf_etpasswordconfirm"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="16dp"
                        android:hint="Confirm New Password"
                        android:visibility="gone"
                        android:gravity="center_vertical"/>
                    <Button
                        android:id="@+id/pf_btetpasswordsubmit"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Submit"
                        android:visibility="gone"
                        android:background="@drawable/cutom_round_button"
                        android:gravity="center"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/pf_btetpassword"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/editpencil"/>
                <ImageView
                    android:id="@+id/pf_btetpasswordcancel"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:src="@drawable/cancel"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_margin="6dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/pf_tvbaselocation"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="16dp"
                        android:text="Location"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/pf_btetbaselocation"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:layout_width="0dp"
                    android:visibility="invisible"
                    android:layout_height="match_parent"
                    android:src="@drawable/editpencil"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_margin="6dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/pf_tvnoofprojects"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="16dp"
                        android:text="No Of Projects"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/pf_btetnoofprojects"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:layout_width="0dp"
                    android:visibility="invisible"
                    android:layout_height="match_parent"
                    android:src="@drawable/editpencil"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:padding="6dp">
            <Button
                android:id="@+id/pf_btlogout"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/cutom_round_button"
                android:textSize="16dp"
                android:text="Logout"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pf_userdata"
        android:text="Developed by Latencot"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="24dp"/>
</RelativeLayout>
</ScrollView>