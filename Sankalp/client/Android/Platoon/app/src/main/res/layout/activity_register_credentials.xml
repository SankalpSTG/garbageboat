<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.authentication.RegisterCredentials"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/arc_register_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/boat_logo"
            android:layout_marginVertical="30dp"
            android:layout_centerHorizontal="true"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/arc_register_text"
            android:layout_marginVertical="6dp"
            android:layout_below="@id/arc_register_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="36dp"
                android:paddingHorizontal="60dp"/>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/arc_email_text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/arc_register_text">

            <EditText
                android:id="@+id/arc_emailid"
                android:layout_width="270dp"
                android:inputType="textEmailAddress"
                android:layout_height="54dp"
                android:layout_marginVertical="6dp"
                android:hint="Email Address"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/arc_mobile_no_text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/arc_email_text_input_layout">

            <EditText
                android:id="@+id/arc_mobile_no"
                android:layout_width="270dp"
                android:inputType="number"
                android:layout_height="54dp"
                android:maxLength="10"
                android:layout_marginVertical="6dp"
                android:hint="Mobile No"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/arc_submit"
            android:layout_below="@id/arc_mobile_no_text_input_layout"
            android:layout_centerHorizontal="true"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_marginVertical="6dp"
            android:text="Submit"
            android:background="@drawable/cutom_round_button"/>

    </RelativeLayout>

</ScrollView>