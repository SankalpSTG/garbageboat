<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.profile.manageprojects.ProjectDetails">
        <LinearLayout
            android:id="@+id/apd_projectdeatils"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="6dp"
                    android:layout_height="wrap_content"
                    android:textSize="21dp"
                    android:text="ID"/>
                <TextView
                    android:id="@+id/apd_projectid"
                    android:layout_weight="3"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="21dp"
                    android:text="Project ID"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="6dp"
                    android:layout_height="wrap_content"
                    android:textSize="21dp"
                    android:text="Name"/>
                <TextView
                    android:id="@+id/apd_projectname"
                    android:layout_weight="3"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="21dp"
                    android:text="Project Name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_margin="6dp"
                    android:layout_height="wrap_content"
                    android:textSize="21dp"
                    android:text="Anonymous"/>
                <TextView
                    android:id="@+id/apd_projectisanonymous"
                    android:layout_weight="2"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="21dp"
                    android:text="Project Name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:textSize="21dp"
                    android:text="Description"/>
                <TextView
                    android:id="@+id/apd_projectdescription"
                    android:layout_width="match_parent"
                    android:layout_margin="6dp"
                    android:layout_height="wrap_content"
                    android:textSize="21dp"
                    android:text="Description"/>
            </LinearLayout>
        </LinearLayout>
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/apd_map"
            android:layout_margin="40dp"
            android:layout_below="@id/apd_projectdeatils"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <LinearLayout
            android:id="@+id/apd_boatlistcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="6dp"
            android:layout_below="@id/apd_map">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boats List"
                android:layout_margin="6dp"
                android:textSize="24dp"
                android:gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/apd_boatrecycler"
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <Button
            android:id="@+id/apd_delete"
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:text="Delete Project"
            android:textColor="@color/white"
            android:layout_margin="6dp"
            android:layout_below="@id/apd_boatlistcontainer"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cutom_round_button_warning"/>
    </RelativeLayout>
</ScrollView>