<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.authentication.RegisterUser"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/aru_register_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/boat_logo"
            android:layout_marginVertical="30dp"
            android:layout_centerHorizontal="true"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/aru_register_text"
            android:layout_margin="6dp"
            android:layout_below="@id/aru_register_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Company Details"
                android:textSize="27sp"/>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/aru_company_name_text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/aru_register_text">

            <EditText
                android:id="@+id/aru_company_name"
                android:layout_width="270dp"
                android:inputType="textPersonName"
                android:layout_height="54dp"
                android:layout_marginVertical="6dp"
                android:hint="Company Name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/aru_address_text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/aru_company_name_text_input_layout">

            <EditText
                android:id="@+id/aru_address"
                android:inputType="textPostalAddress"
                android:layout_width="270dp"
                android:layout_height="54dp"
                android:layout_marginVertical="6dp"
                android:hint="Address"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/aru_postal_code_text_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/aru_address_text_input_layout">

            <EditText
                android:id="@+id/aru_postal_code"
                android:inputType="number"
                android:maxLength="7"
                android:layout_width="270dp"
                android:layout_height="54dp"
                android:layout_marginVertical="6dp"
                android:hint="Postal Code"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:id="@+id/aru_password_linear_layout"
            android:layout_width="270dp"
            android:layout_height="54dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/aru_postal_code_text_input_layout"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/aru_password_text_input_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:layout_centerHorizontal="true">

                <EditText
                    android:id="@+id/aru_password"
                    android:inputType="textPassword"
                    android:layout_width="270dp"
                    android:layout_height="54dp"
                    android:layout_marginVertical="6dp"
                    android:hint="Password"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageView
                android:id="@+id/aru_show_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"
                android:paddingHorizontal="6dp"
                android:src="@drawable/blue_eye"
                android:layout_weight="2"/>
        </LinearLayout>
        <Button
            android:id="@+id/aru_submit"
            android:layout_below="@id/aru_password_linear_layout"
            android:layout_centerHorizontal="true"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_marginVertical="6dp"
            android:text="Submit"
            android:background="@drawable/cutom_round_button"/>

    </RelativeLayout>

</ScrollView>