<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">
            <TextView
                android:id="@+id/bi_petnametitle"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Boat Name"/>
            <TextView
                android:id="@+id/bi_petname"
                android:layout_width="match_parent"
                android:layout_margin="6dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/bi_typetitle"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Boat Type"/>
            <TextView
                android:id="@+id/bi_type"
                android:layout_width="match_parent"
                android:layout_margin="6dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/bi_registrationnotitle"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Registration Number"/>
            <TextView
                android:id="@+id/bi_registrationno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/bi_verifiedtitle"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Verification Status"/>
            <TextView
                android:id="@+id/bi_verified"
                android:layout_width="match_parent"
                android:layout_margin="6dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:gravity="center"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/bi_boatimage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_weight="2"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>